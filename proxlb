import argparse
import configparser
try:
    import fastapi
    _imports = True
    _imports_missing = ''
except ImportError:
    _imports = False
    _imports_missing = ' fastapi'
import json
import logging
import os
try:
    import proxmoxer
except ImportError:
    _imports = False
    _imports_missing = _imports_missing + ' proxmoxer'
